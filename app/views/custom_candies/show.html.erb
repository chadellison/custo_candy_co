<h1>Your Custom Candy</h1>
<p>
  <%= @custom_candy.title %>
</p>
<p>
  Chocolate: <%= @custom_candy.category %>
</p>
<p>
  <% unless @custom_candy.fillings == "" %>
  Filling: <%= @custom_candy.fillings %>
  <% end %>
</p>
<p>
  <% if @custom_candy.nuts != "" %>
  Nut: <%= @custom_candy.nuts %>
  <% end %>
</p>
<p>
  <% if @custom_candy.fruits != "" %>
  Fruit: <%= @custom_candy.fruits %>
  <% end %>
</p>
<p>
  <% if @custom_candy.spices != "" %>
  Spice: <%= @custom_candy.spices %>
  <% end %>
</p>
<p>
Custom Candy Price: <%= @custom_candy.to_dollars %>
</p>
<%= button_to "Create another Candy", "/custome_candies/new", class: "btn btn-success red" %><br>
<%= button_to "Add to Cart", carts_path(id: @custom_candy.id), method: :post, class: "btn btn-success red" %>
