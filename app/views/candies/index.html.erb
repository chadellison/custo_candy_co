
<div class="container">

    <% @candies.each do |candy| %>
    <div class="row"
      <div class="col s3">
        <div class="card small">
          <div class="card-image waves-effect waves-block waves-light">
            <img class="activator" src=<%= candy.image %> >
          </div>
          <div class="card-content">
            <span class="card-title activator grey-text text-darken-4"><%= candy.title %><i class="material-icons right">more_vert</i></span>
            <p><a href="#">Add to Cart</a></p>
          </div>
          <div class="card-reveal">
            <span class="card-title grey-text text-darken-4"><%= candy.price %><i class="material-icons right">close</i></span>
            <p><%= candy.description %></p>
          </div>
        </div>
      </div>
    </div>
    <% end %>

</div>
