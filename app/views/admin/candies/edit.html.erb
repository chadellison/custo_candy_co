<%= form_for(@candy, url: admin_candy_path) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.label :status %>
  <%= f.select :status, [['In Stock', 'In Stock'], ['Out of Stock', 'Out of Stock'], ['Discontinued', 'Discontinued']] %>
  <%= f.label :category_id %>
  <%= f.collection_select :category_id, Category.all, :id, :name %><br>
  <%= f.label :image %>
  <%= f.file_field :image %><br><br>
  <%= f.submit "Update Candy", class: "btn btn-success red" %>
<% end %>
