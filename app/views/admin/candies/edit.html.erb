<%= form_for(@candy, url: admin_candy_path) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.label :image %>
  <%= f.text_field :image %>
  <%= f.label :status %>
  <%= f.collection_select(:status, Candy.all, :id, :status) %>
  <%= f.label :category_id %>
  <%= f.text_field :category_id %>
  <%= f.submit %>
<% end %>
